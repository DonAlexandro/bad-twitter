{{#if success}}
    <div class="toast d-flex align-items-center text-white bg-success border-0 position-absolute top-0 end-0 show">
        <div class="toast-body">
            {{success}}
        </div>
        <button type="button" class="btn-close btn-close-white ms-auto me-2" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
{{/if}}
{{#if error}}
    <div class="toast d-flex align-items-center text-dark bg-warning border-0 position-absolute top-0 end-0 show">
        <div class="toast-body">
            {{error}}
        </div>
        <button type="button" class="btn-close ms-auto me-2" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
{{/if}}

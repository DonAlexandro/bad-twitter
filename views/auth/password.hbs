{{> messages}}
<div class="card auth-card">
    <div class="card-body">
        <h5 class="mb-3">{{title}}</h5>
        <form action="/auth/password" method="POST">
            <div class="mb-3">
                <input type="password" name="password" placeholder="Новий пароль" class="form-control">
            </div>
            <div class="mb-3">
                <input type="password" name="confirm" placeholder="Повторіть пароль" class="form-control">
            </div>
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-danger">Продовжити</button>
        </form>
    </div>
</div>